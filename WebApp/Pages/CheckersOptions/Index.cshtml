@page
@model WebApp.Pages_CheckersOptions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Game Options</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CheckersOption[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckersOption[0].Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckersOption[0].Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckersOption[0].WhiteStarts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckersOption[0].CaptureMandatory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckersOption[0].LongestCaptureMandatory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckersOption[0].BecomesKingSameTurn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckersOption[0].AllowCaptureBackwards)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckersOption[0].KingMovesByOne)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CheckersOption) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhiteStarts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaptureMandatory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LongestCaptureMandatory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BecomesKingSameTurn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AllowCaptureBackwards)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KingMovesByOne)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
