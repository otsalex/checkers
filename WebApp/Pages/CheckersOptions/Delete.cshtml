@page
@model WebApp.Pages.CheckersOptions.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete options</h1>

@{
    if (Model.Msg != null)
    {
        <h3>Cannot delete these options, because they are used in an active game!</h3>
    }
    else
    {
        <h3>Are you sure you want to delete this?</h3>
    }
}
<div>
    <h4>Options</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckersOption.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckersOption.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckersOption.Width)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckersOption.Width)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckersOption.Height)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckersOption.Height)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckersOption.WhiteStarts)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckersOption.WhiteStarts)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckersOption.CaptureMandatory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckersOption.CaptureMandatory)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckersOption.LongestCaptureMandatory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckersOption.LongestCaptureMandatory)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckersOption.BecomesKingSameTurn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckersOption.BecomesKingSameTurn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckersOption.AllowCaptureBackwards)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckersOption.AllowCaptureBackwards)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CheckersOption.KingMovesByOne)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CheckersOption.KingMovesByOne)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="CheckersOption.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to options list</a>
    </form>
</div>
